<apex:page showHeader="true" standardController="Contact" standardStylesheets="false" sidebar="false" applyHtmlTag="true" applyBodyTag="false" docType="html-5.0">

<html xmlns="http://www.w3.org/2000/svg" xmlns:xlink="http://www.w3.org/1999/xlink" lang="en">
<head>
  <meta charset="utf-8" />
  <meta http-equiv="x-ua-compatible" content="ie=edge" />
  <title>View contact Lightning Design System</title>
  <meta name="viewport" content="width=device-width, initial-scale=1" />
  <!-- Import the Design System style sheet -->
  <apex:slds />
</head>
    
<body>
  <!-- REQUIRED SLDS WRAPPER -->
  <div class="slds-scope">

    <!-- MASTHEAD -->
    <p class="slds-text-heading--label  slds-m-bottom--small slds-text-align--center">
      View Contact Lightning Design System
    </p>
     
    <!-- / MASTHEAD -->

    <!-- PRIMARY CONTENT WRAPPER -->
    <div class="myapp">

      <!-- SECTION - BADGE COMPONENTS -->
      <section aria-labelledby="badges">
        <h2 id="badges" class="slds-text-heading--large slds-m-vertical--large">Contact</h2>
        <div>
          <span class="slds-badge">Contact</span>
          <span class="slds-badge slds-theme--inverse">Contact</span>
        </div>
      </section>
      <!-- / SECTION - BADGE COMPONENTS -->
        <div class="slds-grid">
            <div class="slds-col slds-size--1-of-6">                
                <table data-reactroot="" class="slds-table slds-table_bordered slds-table_cell-buffer">
                    <thead>
                        <tr class="slds-text-title_caps">
                            <th scope="col">
                                <div class="slds-truncate" title="Opportunity Name">FirstName</div>                                
                            </th>
                        </tr>
                    </thead>
                    <tbody>                       
                        <tr>
                        <td>{!Contact.FirstName}</td>
                        </tr>                          
                    </tbody>
                </table>
            </div>
            <div class="slds-col slds-size--1-of-6">
             <table data-reactroot="" class="slds-table slds-table_bordered slds-table_cell-buffer">
                    <thead>
                        <tr class="slds-text-title_caps">
                            <th scope="col">
                                <div class="slds-truncate" title="Opportunity Name">LastName</div>                                
                            </th>
                        </tr>
                    </thead>
                    <tbody>                       
                        <tr>
                        <td>{!Contact.LastName}</td>
                        </tr>                          
                    </tbody>
                </table>
            </div>
            <div class="slds-col slds-size--1-of-6">
             <table data-reactroot="" class="slds-table slds-table_bordered slds-table_cell-buffer">
                    <thead>
                        <tr class="slds-text-title_caps">
                            <th scope="col">
                                <div class="slds-truncate" title="Opportunity Name">Contact owner's email</div>                                
                            </th>
                        </tr>
                    </thead>
                    <tbody>                       
                        <tr>
                        <td>{!Contact.Owner.Email}</td>
                        </tr>                          
                    </tbody>
                </table></div>
        </div>
        
    </div>
    <!-- / PRIMARY CONTENT WRAPPER -->      
  </div>
  <!-- / REQUIRED SLDS WRAPPER -->

</body>
</html>
</apex:page>